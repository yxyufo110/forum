.title {
  font-size: 15px;
  color: #000000;
  margin: 13px 0 24px 0;
  font-weight: 500;
}
.box {
  padding: 7px;
}
.local {
  font-size: 14px;
  color: #999999;
  margin-left: 7px;
}
.cityBox {
  display: flex;
}
.cityBoxItem {
  width: 140px;
  height: 34px;
  line-height: 34px;
  border: 1px solid #a9c5ff;
  border-radius: 17px;
  padding-left: 15px;
  padding-right: 12px;
  display: flex;
  justify-content: space-around;
}
.placeholder {
  color: #999999;
}
.province {
  margin-left: 12px;
}
.city {
  margin-left: 17px;
}
.btn {
  width: 120px;
  height: 41px;
  line-height: 41px;
  color: #ffffff;
  font-size: 15px;
  background: #3875f4;
  border-radius: 20.5px;
  text-align: center;
  margin-top: 90px;
  margin-left: auto;
  margin-right: auto;
}
