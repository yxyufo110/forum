<my-nav-bar showTabs="{{true}}" bindgetTabItem="getTabItem" />
<scroll-view scroll-y="true" style="height:{{isIPX?'calc(100vh - 158px - 44pt)' : 'calc(100vh - 158px)'}}">
	<swiper
	 class="swiper"
	 indicator-dots="true"
	 indicator-color="rgba(255,255,255,0.4)"
	 indicator-active-color="rgba(255,255,255,1)"
	 autoplay="true"
	>
		<swiper-item
		 wx:if="{{item.enable}}"
		 wx:for="{{bannerList}}"
		 bindtap="goBanner"
		 data-id="{{item.id}}"
		>
			<image class="banner" src="{{item.banner}}" />
		</swiper-item>
	</swiper>

