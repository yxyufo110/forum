/* pages/user/index.wxss */
.userBox {
  margin-top: 16px;
  width: 92%;
  margin-left: 4%;
}
.userinfo {
  display: flex;
  flex-direction: row;
}
.avatar {
  width: 48px;
  height: 48px;
  border-radius: 100%;
}
.nameBox {
  display: flex;
  flex-direction: column;
  margin-left: 8px;
  margin-bottom: 27px;
}
.nickname {
  color: #000000;
  font-size: 15px;
  font-weight: bold;
  margin-top: 14px;
  margin-bottom: 5px;
}
.tips {
  color: #bdbdbd;
  font-size: 9px;
}
.itemBox {
  -moz-box-shadow: 0px 0px 12px 0px rgba(102, 167, 204, 0.2);
  -webkit-box-shadow: 0px 0px 12px 0px rgba(102, 167, 204, 0.2);
  box-shadow: 0px 0px 12px 0px rgba(102, 167, 204, 0.2);
  border-radius: 5px;
  margin-bottom: 10px;
}
.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20px 13px 12px 12px;
}
.itemImg {
  width: 17px;
  height: 17px;
  margin-right: 8px;
}
.itemTitle {
  color: #000000;
  font-size: 15px;
}
.itemArrow {
  font-size: 14px;
  color: #999999;
  margin-left: auto;
}
.van-button__text {
  width: 100% !important;
}
