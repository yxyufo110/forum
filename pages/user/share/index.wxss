.share-box {
  padding: 15px 10px;
  position: relative;
}
.bg-img {
  width: 100%;
  height: 110px;
  border-radius: 10px;
}
.title {
  font-size: 15px;
  color: #3b78f5;
  background: rgba(255, 255, 255, 0.9);
  height: 25px;
  border-radius: 0 12.5px 12.5px 0;
  line-height: 25px;
  text-align: center;
  width: 75px;
  position: absolute;
  left: 0;
  top: 30px;
}
.count-box {
  color: #ffffff;
  position: absolute;
  width: 100px;
  top: 30px;
  left: calc(50vw - 50px);
  text-align: center;
}
.desc {
  font-size: 12px;
}
.num {
  font-size: 30px;
  margin-top: 22px;
}
.cell {
  border-bottom: 1px solid #ebebeb;
  padding: 9px 0;
}
.c-title {
  color: #999999;
  font-size: 12px;
  margin-bottom: 8px;
}
.c-name {
  margin-bottom: 12px;
  font-size: 15px;
  color: #000000;
  font-weight: 500;
}

.c-time {
  color: #999999;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
}
.timer {
  color: #3b78f5;
  font-size: 15px;
  width: 100%;
  text-align: center;
  margin-top: 30px;
}