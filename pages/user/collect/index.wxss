.card {
  margin-top: 23px;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 12px 0px rgba(102, 167, 204, 0.2);
  border-radius: 5px;
  margin: 23px 13px 13px 13px;
  overflow: hidden;
}
.bg {
  background: linear-gradient(90deg, rgba(255, 64, 90, 1) 0%, rgba(255, 110, 117, 1) 100%);
  border-radius: 5px 5px 0px 0px;
  height: 44px;
  line-height: 44px;
  color: #ffffff;
  font-size: 15px;
  text-align: center;
}
