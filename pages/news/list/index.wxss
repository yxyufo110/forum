.news {
  font-size: 17px;
  font-weight: bold;
  color: #000000;
  margin-right: 21px;
}
.top {
  display: flex;
  align-items: center;
  padding: 15px;
}
.swiper {
  width: 100%;
  height: 150px;
  border-radius: 5px 5px 0 0;
  overflow: hidden;
  transform: translateY(0);
}
.banner {
  width: 100%;
  height: 100%;
}
.item {
  display: flex;
  justify-content: space-between;
  padding: 15px; 
  border-bottom: 1px solid #EFEFEF;
}
.cover {
  width: 105px;
  height: 80px;
}
.label {
  font-size: 15px;
  font-weight: 500;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: space-between;

}
.more {
  font-size: 12px;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;

}
.timer {
  font-size: 10px;
font-family: PingFang SC;
font-weight: 400;
color: #999999;
display: flex;
justify-content: space-between;
align-items: center;
}
.hot {
  display: flex;
  align-items: center;
}
.cardIcon {
  width: 12px;
  height: 15px;
}
.count {
  font-size: 10px;
font-family: PingFang SC;
font-weight: 400;
color: #FE424F;
}
.right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  margin-left: 15px;
}
.l1 {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1; /* 行数*/
  -webkit-box-orient: vertical;
}
.cell {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  font-size: 15px;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  align-items: center;
  border-bottom: 1px solid #EFEFEF;
}
.cell:first-child {
  padding: 0 15px 15px 15px !important;

}