.bg {
  width: 100%;
  height: 150px;
}
.card {
  margin: 0 12px 16px 12px;
  box-shadow: 0px 0px 12px 1px rgba(215, 228, 255, 1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 40px;
  height: 150px;
}
.pk {
  width: 48px;
  height: 21px;
  margin-top: 85px;
}
.left image {
  width: 60px;
  height: 60px;
  border-radius: 60px;
}
.right image {
  width: 60px;
  height: 60px;
  border-radius: 60px;
}
.sum {
  color: #3875f4;
  font-size: 24px;
  text-align: center;
  margin-top: 18px;
}
.start {
  width: 85px;
  height: 41px;
  line-height: 41px;
  text-align: center;
  border-radius: 41px 0 0 41px;
  background: #3875f4;
  color: #ffffff;
  font-size: 15px;
  position: absolute;
  right: 0;
  bottom: 65px;
  box-shadow: 0px 0px 7px 0px rgba(56, 117, 244, 0.66);
}
