.jdraw {
  background-color: #fff;
}

.jdraw .tool {
  display: flex;
  align-content: center;
  justify-content: space-between;
  margin: 0 15px;
}

.jdraw .tool image {
  width: 30px;
  height: 30px;
}

.jdraw .selected {
  background-color: #f7efe0;
}

.jdraw .tinct-list {
  overflow: hidden;
  white-space: nowrap;
  margin-top: 15px;
}

.jdraw .tinct-item {
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  margin: 0 10px;
}

.jdraw .tinct-curr::after {
  content: '';
  display: block;
  border: 1px solid #864242;
  width: 22px;
  height: 22px;
  border-radius: 100%;
  margin-top: -2px;
  margin-left: -2px;
}
