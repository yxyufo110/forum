/* pages/checkType/index.wxss */
.title {
  font-size: 15px;
  color: #000000;
  margin: 20px 0 25px 7px;
  font-weight: 500;
}
.titleBox {
  padding: 20px 17px 25px 7px;
  display: flex;
  justify-content: space-between;
}
.items {
  width: 190px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #ffffff;
  background: linear-gradient(-23deg, rgba(192, 196, 249, 1) 0%, rgba(148, 162, 239, 1) 100%);
  box-shadow: 0px 3px 16px 0px rgba(148, 162, 239, 0.6);
  border-radius: 5px;
  margin-top: 20px;
  margin-left: auto;
  margin-right: auto;
}
.box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.box:after {
  content: ' ';
  width: 40%;
  height: 34px;
}
.box .item {
  width: 40%;
  height: 34px;
  line-height: 34px;
  text-align: center;
  font-size: 15px;
  font-weight: 500;
  color: #ffffff;
  border-radius: 17px;
  background-color: #a9c5ff;
  margin-bottom: 26px;
}
.radioBox {
  padding: 18px;
  margin-left: 17px;
}
.van-radio {
  padding: 17px;
}
.van-radio__label {
  color: #999999 !important;
}
.btn {
  width: 120px;
  height: 41px;
  line-height: 41px;
  color: #ffffff;
  font-size: 15px;
  background: #3875f4;
  border-radius: 20.5px;
  text-align: center;
  margin-top: 90px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 60px;
}
