.customerBox {
  width: 92%;
  margin-left: 4%;
  -moz-box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  -webkit-box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  margin-top: 41px;
  border-radius: 5px;
}
.item {
  width: 100%;
  height: 67px;
  border-bottom: 1px solid #f6f5f8;
  line-height: 67px;
}
.button {
  width: 100%;
  height: 100%;
  line-height: 67px;
  border: none;
  background: #fff;
  padding: 0;
}
.button::after {
  border: none;
}
.item:last-child {
  border-bottom: none;
}
.itemImg {
  float: left;
  width: 22px;
  height: 22px;
  margin: 22.5px 12px 0 37px;
}
.title {
  color: #121212;
  font-size: 15px;
  float: left;
}
