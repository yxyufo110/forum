.card {
  box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  border-radius: 5px;
  margin: 17px 11px 0 11px;
  padding: 14px;
}
.card:last-child {
  margin-bottom: 20px;
}
.t1 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 9px;
}
.t1 .l {
  font-size: 12px;
  color: #999999;
}
.t1 .r {
  font-size: 15px;
  font-weight: 500;
}
.payed {
  color: #53c489;
}
.wait {
  color: #ff312a;
}
.t2 {
  font-size: 15px;
  font-weight: 500;
  color: #000000;
  margin-bottom: 6px;
}
.t3 {
  font-size: 13px;
  color: #999999;
  padding-bottom: 12px;
  border-bottom: 1px solid #ebebeb;
  margin-bottom: 19px;
}
.t4 {
  color: #3b78f5;
  font-size: 15px;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
}
.continue {
  padding: 6px 8px;
background: linear-gradient(0deg, #FF2828 0%, #FF7A40 100%);
box-shadow: 0px 0px 4px 0px rgba(255, 83, 53, 0.66);
border-radius: 15px;
font-size: 15px;
font-weight: 500;
color: #FFFFFF;
}
.look {
  padding: 6px 8px;
background: #3875F4;
box-shadow: 0px 0px 4px 0px rgba(56, 117, 244, 0.66);
border-radius: 15px;
font-size: 15px;
font-weight: 500;
color: #FFFFFF;
}