.box {
  display: flex;
  /* justify-content: space-between; */
  padding: 13px 6px;
  -moz-box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  -webkit-box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  box-shadow: 0px 0px 12px 1px rgba(181, 197, 229, 0.5);
  border-radius: 5px;
  flex-wrap: nowrap;
  margin-bottom: 12px;
}
.leftImg {
  width: 105px;
  height: 80px;
  border-radius: 5px;
}
.r1 {
  display: flex;
  justify-content: space-between;
}
.right {
  width: 100%;
  padding-left: 14px;
  padding-right: 5px;
}
.title {
  font-size: 15px;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1; /* 行数*/
  -webkit-box-orient: vertical;
}
.arrow {
  color: #999999;
  font-size: 15px;
}
.teacher {
  margin-top: 8px;
  font-size: 12px;
  color: #999999;
}
.bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}
.time {
  color: #999999;
  font-size: 10px;
}
.cardIcon {
  width: 16px;
  height: 16px;
}
.count {
  font-size: 9px;
  color: #fe424f;
  margin-left: 3px;
  float: right;
  margin-top: 2px;
}
.opt {
  padding-top: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
