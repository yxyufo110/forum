<view class="box">
	<view class="left">
		<image class="leftImg" src="{{cover}}" />
	</view>
	<view class="right">
		<view class="r1">
			<text class="title">{{title}}</text>
			<text class="arrow">></text>
		</view>
		<view class="teacher">
			<text>主讲人：{{teacher}}</text>
		</view>
		<view class="bottom">
			<text class="time">
        {{time}}
      </text>
			<view class="opt" catchtap="noPop">
				<van-button class="shareBtn" open-type="share" custom-style="border:none;padding:0;height:auto">
					<image class="cardIcon" src="../../static/images/share.png" />
				</van-button>
				<image style="margin-left: 5pt;" class="cardIcon" src="../../static/images/fire.png" />
				<text class="count">{{count}}</text>
			</view>
		</view>
	</view>

</view>

