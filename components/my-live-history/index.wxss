.box {
  margin: 15px;
  margin-bottom: 10px;
  background: #FFFFFF;
  box-shadow: 0px 0px 7px 0px rgba(181, 197, 229, 0.5);
  border-radius: 5px;
  padding-bottom: 16px;
}

.content {
  padding: 19px 19px 0 19px;
}
.content-item {
  display: flex;
}
.type {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 5px;
}
.type-item {
  font-size: 10px;
  border-radius: 7px;
  width: 30px;
  text-align: center;
}
.yellow {
  border: 1px solid #FFBA14;
  color: #FFBA14;
}
.red {
  border: 1px solid #FF5561;
  color: #FF5561;
}
.blue {
  border: 1px solid #327BEC;
  color: #327BEC;
}
.desc {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-grow: 1;
}
.title {
  font-size: 14px;
  font-weight: 500;
  color: #000000;
  margin-bottom: 10px;

}
.sub-title {
  font-size: 10px;
  font-weight: 400;
  color: #999999;
}
.atv {
  width: 23px;
  height: 23px;
  border-radius: 23px;
  overflow: hidden;
}
.name {
  font-size: 11px;
  font-weight: 400;
  color: #999999;
}
.tips {
  font-size: 9px;
font-weight: 400;
color: #999999;
text-align: right;
padding-right: 29px;
}
.opt {
  display: flex;
  justify-content: space-around;
  font-size: 10px;
  font-weight: 400;
  color: #999999;
  width: 100%;
  margin-top: 26px;
  padding: 5px 0;
}
.opt-item {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}
.itemImg {
  width: 15px;
  height: 15px;
  margin-right: 6px;
 
}
.center {
  border-left:  1px solid #DCDCDC;
  border-right:  1px solid #DCDCDC;
  padding: 0 12px;
}